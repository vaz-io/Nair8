{
    "name": "Vernacular",
    "scopeName": "source.vernacular",
    "patterns": [
        {
            "match": "#.*$",
            "name": "comment.line.number-sign.vernacular"
        },
        {
            "match": "\\b(awaits|main|secret|defaults|build|do|fail|always|with|and|loop|when|and|as|is|or|output|raise|returns|returning|requires|inherits|becomes|await|yield|using|match|show|speak|about|each|collect|iter|map|filter)\\b",
            "name": "keyword.control.vernacular"
        },
        {
            "match": "\\b(Job|Object|Whole|Decimal|Text|Logic|Void|Any|Promise|List|Mapping|Error|Number)\\b",
            "name": "storage.type.vernacular"
        },
        {
            "match": "\\b(true|false|null)\\b",
            "name": "constant.language.vernacular"
        },
        {
            "match": "\\b(of|to|at|while)\\b",
            "name": "keyword.operator.vernacular"
        },
        {
            "begin": "\"",
            "end": "\"",
            "name": "string.quoted.double.vernacular",
            "patterns": [
                {
                    "match": "\\{[^}]*\\}",
                    "name": "constant.other.placeholder.vernacular"
                }
            ]
        },
        {
            "match": "\\b\\d+(\\.\\d+)?\\b",
            "name": "constant.numeric.vernacular"
        },
        {
            "match": "\\b(my|new)\\b",
            "name": "variable.language.vernacular"
        }
    ]
}